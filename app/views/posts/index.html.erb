<p style="color: green"><%= notice %></p>

<% content_for :title, "Posts" %>

<h1>Posts</h1>

<table border="1">
  <thead>
    <tr>
      <th>제목</th>
      <th>내용</th>
      <th>내용2</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td>
          <a href="<%= post_path(post) %>"><%= post.content %></a>
        </td>
        <td>
          <%= link_to post.content, post_path(post) %>  
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New post", new_post_path %>
